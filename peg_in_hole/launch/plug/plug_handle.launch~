<?xml version="1.0"?>
<launch>

	<arg name="use_rviz" 			default="True" />
	<arg name="table_name"			default="table"/>
	<arg name="use_vision_broadcaster" 	default="True"/>
	<arg name="use_broadcaster"		default="False"/>

	<arg name="save_path"			default="/home/guillaume/roscode/catkin_ws/src/socket_table_broadcaster/save/link_socket"/>
	<arg name="load_saved"			default="False"/>

	<arg name="origin"			default="1 0 0"/>
	<arg name="orientation"			default="0 0 0.707107 0.707107"/>
	


	<group ns="plug_handle">
		<param name="robot_description" command="$(find xacro)/xacro.py '$(find peg_in_hole)/urdf/plug_handle_two.xacro'" />
		<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
		<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />

		<group if="$(arg use_vision_broadcaster)">
			<node name="plug_handle" type="plug_handle_node" pkg="plug_handle" 
			      args="-fixed_frame world -target_frame_listener plug_root -target_frame_broadcaster link_cylinder -origin $(arg origin) -orientation $(arg orientation) -save $(arg save_path) -load $(arg load_saved) -rate 100" output="screen"
			/>
		</group>
		<group if="$(arg use_broadcaster)">
			<node pkg="tf" type="static_transform_publisher" name="table_broadcaster" args="$(arg origin) $(arg orientation) world link_cylinder 100" />
		</group>

	</group>


	<group if="$(arg use_rviz)">	
		<node name="rviz" pkg="rviz" type="rviz"  args="-d $(find peg_in_hole)/launch/plug_handle.rviz"  required="true" />
	</group>



</launch>
